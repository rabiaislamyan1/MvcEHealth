@using MvcESaglik.Models.Siniflar
@model List<Randevu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table#t01 tr:nth-child(even) {
            background-color: #f0ef9a;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #ae91ef;
        }

        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <h2>RANDEVULAR</h2>
    <table class="table table-bordered" style="margin-top:20px" id="t01">
        <tr>
            <th>Randevu No</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Hasta</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var rndv in Model)
        {
            <tr>
                <td style="font-size:15px">@rndv.RandevuNo</td>
                <td style="font-family:Centaur; font-size:22px">@Convert.ToDateTime(rndv.Tarih).ToString("dd/MM/yyyy")</td>
                <td style="font-family:Centaur; font-size:22px">@rndv.Saat</td>
                <td style="font-family:Centaur; font-size:22px">@rndv.KullaniciProfil.KullaniciAd @rndv.KullaniciProfil.KullaniciSoyad</td>
                <td>@Html.ActionLink("Sil","RandevuSil",new { id=rndv.RandevuNo},
                   new {@class="btn btn-warning", onclick="return confirm('Silmek İstiyor musunuz?')"})</td>
                <td><a href="/Randevu/RandevuGetir/@rndv.RandevuNo" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Randevu/RandevuDetay/@rndv.RandevuNo" class="btn btn-success" style="background-color:coral">Detay</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Randevu/RandevuOlustur/" class="btn btn-primary">Yeni Randevu Oluştur</a>
</body>
</html>