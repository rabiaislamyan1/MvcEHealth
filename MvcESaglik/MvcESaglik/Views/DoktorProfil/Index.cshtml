@using MvcESaglik.Models.Siniflar
@model List<DoktorProfil>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table#t01 tr:nth-child(even) {
            background-color: #f0ef9a;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #ae91ef;
        }

        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <h2>DOKTORLAR</h2>
    <table class="table table-bordered" style="margin-top:20px" id="t01">
        <tr>
            <th>Doktor ID</th>
            <th>Doktor İsmi</th>
            <th>Fotoğrafı</th>
            <th>Cinsiyeti</th>
            <th>Maili</th>
            <th>İletişim</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var dktr in Model)
        {
            <tr>
                <td style="font-size:15px">@dktr.DoktorID</td>
                <td style="font-family:Centaur; font-size:22px">@dktr.DoktorAd @dktr.DoktorSoyad</td>
                <td><img src="@dktr.DoktorGorsel" style="width:100px; height:70px;" /></td>
                <td style="font-family:Centaur; font-size:22px">@dktr.Cinsiyet</td>
                <td style="font-family:Centaur; font-size:22px">@dktr.DoktorMail</td>
                <td style="font-family:Centaur; font-size:22px">@dktr.TelNo</td>
                <td>@Html.ActionLink("Sil","DoktorSil",new { id=dktr.DoktorID},
                   new {@class="btn btn-warning", onclick="return confirm('Silmek İstiyor musunuz?')"})</td>
                <td><a href="/DoktorProfil/DoktorGetir/@dktr.DoktorID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/DoktorProfil/DoktorDetay/@dktr.DoktorID" class="btn btn-success" style="background-color:coral">Detay</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/DoktorProfil/DoktorEkle/" class="btn btn-primary">Yeni Doktor Ekle</a>
    <a href="/DoktorProfil/DoktorListe/" class="btn btn-primary" style="background-color:pink">Doktor Liste</a>
</body>
</html>