@model MvcESaglik.Models.Siniflar.İlce
@{
    ViewBag.Title = "İlceEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni İlçe Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.İlceAd)
    @Html.TextBoxFor(x => x.İlceAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.İlceAd, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.İl.İlID)
    @* Html.TextBoxFor(x => x.İlid, new { @class = "form-control" }) *@
    @Html.DropDownListFor(x => x.İlid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>