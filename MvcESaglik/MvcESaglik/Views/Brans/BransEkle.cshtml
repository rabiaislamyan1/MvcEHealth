@model MvcESaglik.Models.Siniflar.Brans
@{
    ViewBag.Title = "BransEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Branş Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.BransAd)
    @Html.TextBoxFor(x => x.BransAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BransAd, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>