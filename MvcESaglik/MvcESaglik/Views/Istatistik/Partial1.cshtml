@model IEnumerable<MvcESaglik.Models.Siniflar.SinifGrup2>
<div class="card">
    <div class="card-header" style="background-color:chocolate; width:585px">
        <h3 class="card-title">Kurum Doktor Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body" style="background-color:burlywood; width:585px">
        <table class="table table-striped" style="background-color:antiquewhite">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Hastane</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>

                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Kurum</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Sayi == 3)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <span class="badge bg-danger">@x.Sayi</span>
                            }
                            @if (x.Sayi == 2)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            }
                            @if (x.Sayi == 3)
                            {
                                <span class="badge bg-success">@x.Sayi</span>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>