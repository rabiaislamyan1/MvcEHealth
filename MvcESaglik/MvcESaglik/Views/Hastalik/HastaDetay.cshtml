@using MvcESaglik.Models.Siniflar
@model List<Hastalik>
@{
    ViewBag.Title = "HastaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table#t01 tr:nth-child(even) {
            background-color: #f0ef9a;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #ae91ef;
        }

        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Hastalık Detay Sayfası</h2>
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active" style="font-size:20px">Hasta Adı: @ViewBag.hasta</li>
    </ol>
    <table class="table table-hover" id="t01">
        <tr>
            <th>Hastalık ID</th>
            <th>Tarih</th>
            <th>Tanı</th>
            <th>Doktoru</th>
            <th>Klinik</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td style="font-size:15px">@x.HastalikID</td>
                <td style="font-family:Centaur; font-size:22px">@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
                <td style="font-family:Centaur; font-size:22px">@x.Tani</td>
                <td style="font-family:Centaur; font-size:22px">@x.DoktorProfil.DoktorAd @x.DoktorProfil.DoktorSoyad</td>
                <td style="font-family:Centaur; font-size:22px">@x.Klinik.KlinikAd</td>
            </tr>
        }
    </table>
</body>
</html>