@using MvcESaglik.Models.Siniflar
@model List<Hastalik>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/DoktorLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table#t01 tr:nth-child(even) {
            background-color: #f0ef9a;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #ae91ef;
        }

        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <h2>HASTALIK SAYFASI</h2>
    <table class="table table-bordered" style="margin-top:20px" id="t01">
        <tr>
            <th>Hastalık ID</th>
            <th>Hasta İsmi</th>
            <th>Tarih</th>
            <th>Tanı</th>
            <th>Doktor</th>
            <th>Klinik</th>
        </tr>
        @foreach (var hst in Model)
        {
            <tr>
                <td style="font-size:15px">@hst.HastalikID</td>
                <td style="font-family:Centaur; font-size:22px">@hst.KullaniciProfil.KullaniciAd @hst.KullaniciProfil.KullaniciSoyad</td>
                <td style="font-family:Centaur; font-size:20px">@Convert.ToDateTime(hst.Tarih).ToString("dd/MM/yyyy")</td>
                <td style="font-family:Centaur; font-size:22px">@hst.Tani</td>
                <td style="font-family:Centaur; font-size:22px">@hst.DoktorProfil.DoktorAd @hst.DoktorProfil.DoktorSoyad</td>
                <td style="font-family:Centaur; font-size:22px">@hst.Klinik.KlinikAd</td>
            </tr>
        }
    </table>
    <br />
    <a href="/Hastalik/HastalikEkle/" class="btn btn-primary">Yeni Hastalık Ekle</a>
</body>
</html>