@model MvcESaglik.Models.Siniflar.İl
@{
    ViewBag.Title = "İlGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>İl Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("İlGuncelle", "İl", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.İlID)
        @Html.LabelFor(x => x.İlAd)
        @Html.TextBoxFor(x => x.İlAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.İlAd, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.Durum)
        @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    </div>
}
<button class="btn btn-warning">Güncelle</button>