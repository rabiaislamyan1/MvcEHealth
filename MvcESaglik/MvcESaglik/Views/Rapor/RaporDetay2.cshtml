@using MvcESaglik.Models.Siniflar
@model List<Rapor>
@{
    ViewBag.Title = "RaporDetay2";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table#t01 tr:nth-child(even) {
            background-color: #f0ef9a;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #ae91ef;
        }

        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Rapor Detay Sayfası</h2>
    <table class="table table-hover" id="t01">
        <tr>
            <th>Rapor No</th>
            <th>Veriliş Tarihi</th>
            <th>Rapor Türü</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Tanı</th>
            <th>Hasta</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td style="font-size:15px">@x.RaporNo</td>
                <td style="font-family:Centaur; font-size:22px">@Convert.ToDateTime(x.VerilisTarihi).ToString("dd/MM/yyyy")</td>
                <td style="font-family:Centaur; font-size:22px">@x.RaporTur</td>
                <td style="font-family:Centaur; font-size:22px">@Convert.ToDateTime(x.BaslangicTarihi).ToString("dd/MM/yyyy")</td>
                <td style="font-family:Centaur; font-size:22px">@Convert.ToDateTime(x.BitisTarihi).ToString("dd/MM/yyyy")</td>
                <td style="font-family:Centaur; font-size:22px">@x.Tani</td>
                <td style="font-family:Centaur; font-size:22px">@x.KullaniciProfil.KullaniciAd @x.KullaniciProfil.KullaniciSoyad</td>
            </tr>
        }
    </table>
</body>
</html>